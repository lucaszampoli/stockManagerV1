// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  email String @unique
  profile String @db.VarChar(2)
  status String @db.VarChar(2)
  password String @db.VarChar(300)
}

model Product {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  sku String @db.VarChar(100)
  category String @db.VarChar(150)
  quantity Int @db.Int()
  price Decimal @db.Decimal(15,4)
  description String? @db.Text
  image_path String @db.VarChar(255)
}

model Order {
  id Int @id @default(autoincrement())
  user_id Int @db.Int()
  payment_method String @db.VarChar(255)
  total Decimal @db.Decimal(15,4)
  date_added DateTime @db.DateTime()
  date_modified DateTime @db.DateTime()
}

model OrderProduct {
  id Int @id @default(autoincrement())
  order_id Int @db.Int()
  product_id Int @db.Int()
  name String @db.VarChar(255)
  quantity Int @db.Int()
  price Decimal @db.Decimal(15,4)
  total Decimal @db.Decimal(15,4)
}
